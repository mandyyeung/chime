<div class="row">
  <div class="col-md-3 col-md-offset-5 panel panel-default">
    <h2>Sign in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div><%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, :required => true, class: "form-control" %></div>

      <div><%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off", :required => true, class: "form-control" %></div>
    <br>
      <% if devise_mapping.rememberable? -%>
        <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
      <% end -%>
    <br>
      <div><%= f.submit "Sign in", class: "btn btn-lg btn-primary" %></div>
    <% end %>
    <br>
    <%= render "devise/shared/links" %>
    <br>
  </div>
</div>
