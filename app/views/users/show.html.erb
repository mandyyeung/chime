<h2><%= @user.first_name %>'s Profile</h2>
<div class="form-group">
    <label for="disabledFirstName">First Name: </label>
    <input class="form-control" id="disabledFirstName" type="text" placeholder="<%= @user.first_name %>" disabled="">
</div>
<div class="form-group">
    <label for="disabledLastName">Last Name: </label>
    <input class="form-control" id="disabledLastName" type="text" placeholder="<%= @user.last_name %>" disabled="">
</div>
<div class="form-group">
    <label for="disabledEmail">Email: </label>
    <input class="form-control" id="disabledEmail" type="text" placeholder="<%= @user.email %>" disabled="">
</div>
<div class="form-group">
    <label for="disabledCreated">Date Joined: </label>
    <input class="form-control" id="disabledCreated" type="text" placeholder="<%= @user.created_at.to_date %>" disabled="">
</div>
<div class="form-group">
    <label for="disabledUpdated">Last Updated: </label>
    <input class="form-control" id="disabledUpdated" type="text" placeholder="<%= @user.updated_at.to_date %>" disabled="">
</div>
